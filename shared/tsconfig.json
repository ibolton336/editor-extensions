{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "tsBuildInfoFile": "./dist/tsconfig.tsbuildinfo",
    "module": "ESNext",
    "moduleResolution": "Node"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["dist", "node_modules"]
}
