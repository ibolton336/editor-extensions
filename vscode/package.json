{
  "name": "konveyor-gui",
  "displayName": "Konveyor GUI",
  "description": "GUI for Konveyor",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "konveyor",
          "title": "Konveyor",
          "icon": "$(extensions)"
        }
      ]
    },
    "views": {
      "konveyor": [
        {
          "type": "webview",
          "id": "konveyor.konveyorGUIView",
          "name": "Konveyor GUI"
        }
      ]
    },
    "commands": [
      {
        "command": "konveyor.konveyorGUIView",
        "title": "Open GUI",
        "category": "Konveyor"
      },
      {
        "command": "konveyor.toggleFullScreen",
        "title": "Toggle GUI Fullscreen",
        "category": "Konveyor"
      }
    ],
    "view/title": [
      {
        "command": "konveyor.toggleFullScreen",
        "group": "navigation@1",
        "when": "view == konveyor.konveyorGUIView"
      }
    ],
    "editor/title": [
      {
        "command": "konveyor.toggleFullScreen",
        "group": "navigation@1",
        "when": "activeWebviewPanelId == konveyor.konveyorGUIView"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "build-react": "webpack --config webpack.config.views.js --mode production",
    "dev-react": "webpack serve --config webpack.config.views.js --mode development"
  },
  "devDependencies": {
    "@pmmmwh/react-refresh-webpack-plugin": "^0.5.10",
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/promise-deferred": "^2.0.5",
    "@types/uuid": "^10.0.0",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.0",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.8.1",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "postcss": "^8.4.27",
    "postcss-loader": "^7.3.3",
    "postcss-preset-env": "^9.1.1",
    "style-loader": "^3.3.3",
    "swc-loader": "^0.2.3",
    "ts-loader": "^9.4.4",
    "typescript": "^4.9.3",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.0",
    "webpack-dev-server": "^4.15.1",
    "webpack-shell-plugin-next": "^2.3.1"
  },
  "dependencies": {
    "@patternfly/patternfly": "^4.0.0",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "promise-deferred": "^2.0.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "uuid": "^9.0.0"
  }
}
